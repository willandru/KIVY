# microphone.kv

<MicrophoneApp>:
    orientation: 'vertical'

    Graph:
        id: graph
        xlabel: 'Time (s)'
        ylabel: 'Amplitude'
        x_ticks_minor: 5
        x_ticks_major: 25
        y_ticks_major: 1
        y_grid_label: True
        x_grid_label: True
        padding: 5
        x_grid: True
        y_grid: True
        xmin: 0
        xmax: 100
        ymin: -1
        ymax: 1

<Graph>:
    Label:
        text: 'Real-time Audio Plot'
        size_hint_y: None
        height: '48dp'
